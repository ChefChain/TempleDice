{
  "version": 2,
  "functions": {
    "api/*.py": {
      "runtime": "python3.12",
      "memory": 128,
      "maxDuration": 10,
      "excludeFiles": "**/{node_modules,.next,env,venv,__pycache__,*.pyc}/**"
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1.py"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "installCommand": "pnpm install --no-frozen-lockfile",
  "buildCommand": "pnpm run build",
  "outputDirectory": ".next"
}